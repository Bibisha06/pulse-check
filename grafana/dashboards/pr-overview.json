{
  "id": null,
  "title": "PR Performance Overview",
  "tags": ["pr-monitoring", "performance"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "branch",
        "type": "query",
        "query": "label_values(app_requests_total, branch)",
        "datasource": "Prometheus",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "value": "All",
          "text": "All"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (per second)",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{branch=~\"$branch\"}[1m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "95th Percentile Latency",
      "type": "stat", 
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_duration_seconds_bucket{branch=~\"$branch\"}[5m])) by (le))",
          "legendFormat": "P95 Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 2.0}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{branch=~\"$branch\",status=~\"4..|5..\"}[5m])) / sum(rate(app_requests_total{branch=~\"$branch\"}[5m])) * 100",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "sum(app_requests_total{branch=~\"$branch\"})",
          "legendFormat": "Total Requests",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "value"}
        }
      }
    },
    {
      "id": 5,
      "title": "Request Rate Over Time",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{branch=~\"$branch\"}[1m])) by (branch)",
          "legendFormat": "{{branch}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Requests/sec",
          "min": 0
        }
      ]
    },
    {
      "id": 6,
      "title": "Response Time Percentiles",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(app_request_duration_seconds_bucket{branch=~\"$branch\"}[5m])) by (le))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_duration_seconds_bucket{branch=~\"$branch\"}[5m])) by (le))",
          "legendFormat": "P95", 
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(app_request_duration_seconds_bucket{branch=~\"$branch\"}[5m])) by (le))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yAxes": [
        {
          "label": "Response Time (seconds)",
          "min": 0
        }
      ]
    },
    {
      "id": 7,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 17},
      "targets": [
        {
          "expr": "{job=\"pr-app\"} |= \"$branch\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ]
}